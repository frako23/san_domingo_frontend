{
  // ðŸ”§ Volar: reemplaza Vetur y mejora el soporte de Vue 3 + TypeScript
  "volar.takeOverMode.enabled": true,

  // ðŸš« Desactiva Vetur si lo tienes instalado
  "vetur.validation.template": false,
  "vetur.validation.script": false,
  "vetur.validation.style": false,

  // ðŸ’¡ ErrorLens: muestra errores inline
  "errorLens.enabled": true,
  "errorLens.fontWeight": "bold",
  "errorLens.gutterIconsEnabled": true,
  "errorLens.errorColor": "#ff6b6b",
  "errorLens.warningColor": "#f4a261",
  "errorLens.infoColor": "#2a9d8f",
  "errorLens.hintColor": "#8ecae6",
  "errorLens.messageTemplate": "ðŸ’¥ {message}",

  // ðŸ§¼ Opcional: Prettier para formateo consistente
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  // ðŸ“¦ ESLint para linting en Vue + TypeScript
  "eslint.validate": ["javascript", "typescript", "vue"]
}
